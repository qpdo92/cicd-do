pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'DÃ©ploiement vers EC2 en cours...'
                sshagent(['8e07cee9-52d4-41ec-a1cb-eebc7a0dd38c']) {
                    sh 'scp -o StrictHostKeyChecking=no target/cicd-do-0.0.1-SNAPSHOT.jar ec2-user@ec2-35-181-114-26.eu-west-3.compute.amazonaws.com:/home/ec2-user/'
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@ec2-35-181-114-26.eu-west-3.compute.amazonaws.com "sudo systemctl restart springboot-app"'
                }
            }
        }

        stage('Test SSH EC2') {
            steps {
                sshagent(['8e07cee9-52d4-41ec-a1cb-eebc7a0dd38c']) {
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@ec2-35-181-114-26.eu-west-3.compute.amazonaws.com "echo Connexion OK"'
                }
            }
        }
    }

    post {
        success {
            echo 'Build et dÃ©ploiement rÃ©ussis ! ðŸŽ‰'
        }
        failure {
            echo 'Ã‰chec du pipeline.'
        }
    }
}
